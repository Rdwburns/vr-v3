{{ 'component-before-after.css' | asset_url | stylesheet_tag }}

{% if section.settings.heading != blank %}
<div class="page-width before-after-header">
    <div class="before-after-headline headline-section title-wrapper-with-link title-wrapper--self-padded-mobile">
          <h2 class="title">{{ section.settings.heading }}</h2>
    </div>
</div>
{% endif %}

<div class="before-after {% if section.settings.full_width %}before-after--full-width{% else %}page-width{% endif %} color-scheme-{{ section.settings.color_scheme }}">
  <div class="before-after__grid color-{{ section.settings.color_scheme }}{% if section.settings.layout == 'text_first' %} before-after__grid--reverse{% endif %} grid grid--gapless grid--1-col grid--2-col-tablet grid--4-col-desktop">
    <div class="grid__item before-after-images {% if section.settings.mobile_stack == 'inline' %}before-after-inline{% endif %}">
      <div class="before-after__media before-after__media--{{ section.settings.height }} {% if section.settings.before_image != blank %}media{% else %}before-after__media--placeholder placeholder{% endif %}"
           style="padding-bottom:100%;"
      >
        {%- if section.settings.before_image != blank -%}
          <img srcset="{%- if section.settings.before_image.width >= 165 -%}{{ section.settings.before_image | img_url: '165x' }} 165w,{%- endif -%}
            {%- if section.settings.before_image.width >= 360 -%}{{ section.settings.before_image | img_url: '360x' }} 360w,{%- endif -%}
            {%- if section.settings.before_image.width >= 535 -%}{{ section.settings.before_image | img_url: '535x' }} 535w,{%- endif -%}
            {%- if section.settings.before_image.width >= 720 -%}{{ section.settings.before_image | img_url: '720x' }} 720w,{%- endif -%}
            {%- if section.settings.before_image.width >= 940 -%}{{ section.settings.before_image | img_url: '940x' }} 940w,{%- endif -%}
            {%- if section.settings.before_image.width >= 1070 -%}{{ section.settings.before_image | img_url: '1070x' }} 1070w{%- endif -%}"
            src="{{ section.settings.before_image | img_url: '533x' }}"
            sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ section.settings.before_image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.before_image.width }}"
            height="{{ section.settings.before_image.height }}"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
        <div class="before-image-caption image-caption">{{ section.settings.before_caption }}</div>
      </div>
        <div class="before-after__media before-after__media--{{ section.settings.height }} {% if section.settings.after_image != blank %}media{% else %}before-after__media--placeholder placeholder{% endif %}"
             style="padding-bottom:100%;"
        >
            {%- if section.settings.after_image != blank -%}

            <img srcset="{%- if section.settings.after_image.width >= 165 -%}{{ section.settings.after_image | img_url: '165x' }} 165w,{%- endif -%}
                {%- if section.settings.after_image.width >= 360 -%}{{ section.settings.after_image | img_url: '360x' }} 360w,{%- endif -%}
                {%- if section.settings.after_image.width >= 535 -%}{{ section.settings.after_image | img_url: '535x' }} 535w,{%- endif -%}
                {%- if section.settings.after_image.width >= 720 -%}{{ section.settings.after_image | img_url: '720x' }} 720w,{%- endif -%}
                {%- if section.settings.after_image.width >= 940 -%}{{ section.settings.after_image | img_url: '940x' }} 940w,{%- endif -%}
                {%- if section.settings.after_image.width >= 1070 -%}{{ section.settings.after_image | img_url: '1070x' }} 1070w{%- endif -%}"
                src="{{ section.settings.after_image | img_url: '533x' }}"
                sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ section.settings.after_image.alt | escape }}"
                loading="lazy"
                width="{{ section.settings.after_image.width }}"
                height="{{ section.settings.after_image.height }}"
            >
            {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
            <div class="after-image-caption image-caption">{{ section.settings.after_caption }}</div>
        </div>
    </div>
    <div class="grid__item before_after--review_text">
        <div class="review_title h3">{{ section.settings.review_title }}</div>
        <div class="before_after--review_body rte review-quote-text">
            <p class="review-quote-text-body">{{ section.settings.review }}</p>
        </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.before-after.name",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "default": "Before and After",
        "label": "t:sections.before-after.settings.heading.label"
    },
    {
        "type": "text",
        "id": "review_title",
        "default": "Arthur, 21, Athens",
        "label": "t:sections.before-after.settings.review_title.label"
    },
    {
      "type": "image_picker",
      "id": "before_image",
      "label": "t:sections.before-after.settings.before_image.label"
    },
    {
        "type": "text",
        "id": "before_caption",
        "default": "Day 1",
        "label": "t:sections.before-after.settings.before_caption.label"
      },
    {
        "type": "image_picker",
        "id": "after_image",
        "label": "t:sections.before-after.settings.after_image.label"
    },
    {
        "type": "text",
        "id": "after_caption",
        "default": "Day 30",
        "label": "t:sections.before-after.settings.after_caption.label"
    },
    {
      "type": "select",
      "id": "height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.before-after.settings.height.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.before-after.settings.height.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.before-after.settings.height.options__3.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.before-after.settings.height.label"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "background-1",
          "label": "t:sections.before-after.settings.color_scheme.options__1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.before-after.settings.color_scheme.options__2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.before-after.settings.color_scheme.options__3.label"
        },
        {
          "value": "accent-1",
          "label": "t:sections.before-after.settings.color_scheme.options__4.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.before-after.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.before-after.settings.color_scheme.label"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "image_first",
          "label": "t:sections.before-after.settings.layout.options__1.label"
        },
        {
          "value": "text_first",
          "label": "t:sections.before-after.settings.layout.options__2.label"
        }
      ],
      "default": "image_first",
      "label": "t:sections.before-after.settings.layout.label",
      "info": "t:sections.before-after.settings.layout.info"
    },
    {
        "type": "select",
        "id": "mobile_stack",
        "options": [
        {
            "value": "stack",
            "label": "t:sections.before-after.settings.mobile_stack.options__1.label"
        },
        {
            "value": "inline",
            "label": "t:sections.before-after.settings.mobile_stack.options__2.label"
        }
        ],
        "default": "inline",
        "label": "t:sections.before-after.settings.mobile_stack.label"
    },
    {
        "type": "text",
        "id": "review",
        "type": "text",
        "default": "Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.",
        "label": "t:sections.before-after.settings.review.label"
    },
    {   
        "type": "text",
        "id": "button_label",
        "default": "Button label",
        "label": "t:sections.before-after.settings.button_label.label"
    },
    {
        "type": "url",
        "id": "button_link",
        "label": "t:sections.before-after.settings.button_link.label"
    }
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "t:sections.before-after.presets.name",
      "blocks": [
      ]
    }
  ]
}
{% endschema %}
