{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <div class="announcement-bar color-{{ block.settings.color_scheme }}" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
        {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
          {%- endif -%}
              <p class="announcement-bar__message h5">
                {{ block.settings.text | escape }}
                {%- if block.settings.link != blank -%}
                  {% render 'icon-arrow' %}
                {%- endif -%}
              </p>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
    {%- when 'shipping_bar' -%}
      <div class="announcement-bar color-{{ block.settings.color_scheme }}" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
        {%- if cart == empty -%}
          {% if request.host == 'vicereversa.co.uk' %}<p class="announcement-bar__message h5">Free UK Shipping on All Orders</p>
            {% elsif request.host == 'vicereversaskin.com' %}<p class="announcement-bar__message h5">Free Shipping on Orders Over A$120</p>
            {% elsif request.host == 'vicereversaskin.eu' %}<p class="announcement-bar__message h5">Free EU Shipping on Orders Over â‚¬50</p>
          {% endif %}
        {%- endif -%}
        {%- if cart != empty -%}
          {%- if request.host == 'vicereversa.co.uk' -%}
            <p class="announcement-bar__message h5">Your order ships free! ðŸ“¦</p>
            {%- elsif request.host == 'vicereversaskin.com' -%}
              {%- if cart.total_price > 12000 -%}<p class="announcement-bar__message h5">Your order ships free! ðŸ“¦</p>
              {%- else -%}<p class="announcement-bar__message h5">Spend just {{ 12000 | minus: cart.total_price | money }} more to get free shipping!</p>
              {%- endif -%}
            {%- elsif request.host == 'vicereversaskin.eu' -%}
              {%- if cart.total_price > 5000 -%}<p class="announcement-bar__message h5">Your order ships free! ðŸ“¦</p>
              {%- else -%}<p class="announcement-bar__message h5">Spend just {{ 5000 | minus: cart.total_price | money }} more to get free shipping!</p>
              {%- endif -%}
            {%- endif -%}
        {% endif %}
      </div>
  {%- endcase -%}
{%- endfor -%}

